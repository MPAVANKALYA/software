<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" 
    xmlns:granite="http://www.adobe.com/jcr/granite/1.0" 
    xmlns:cq="http://www.day.com/jcr/cq/1.0" 
    xmlns:jcr="http://www.jcp.org/jcr/1.0" 
    xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Component dialog"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content jcr:primaryType="nt:unstructured" 
        granite:class="cmp-list_editor" 
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured" 
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <authorinfo jcr:primaryType="nt:unstructured" 
                        jcr:title="Author Info" 
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns jcr:primaryType="nt:unstructured" 
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns" 
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column jcr:primaryType="nt:unstructured" 
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <authors jcr:primaryType="nt:unstructured" 
                                                sling:resourceType="granite/ui/components/coral/foundation/form/radiogroup"
                                                fieldLabel="Authors" 
                                                name="./listFrom"
                                                class="cq-dialog-radio-showhide">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <author1 jcr:primaryType="nt:unstructured" text="Author1" value="author1"/>
                                                    <author2 jcr:primaryType="nt:unstructured" text="Author2" value="author2"/>
                                                    <author3 jcr:primaryType="nt:unstructured" text="Author3" value="author3"/>
                                                    <author4 jcr:primaryType="nt:unstructured" text="Author4" value="author4"/>
                                                    <author5 jcr:primaryType="nt:unstructured" text="Author5" value="author5"/>
                                                    <author6 jcr:primaryType="nt:unstructured" text="Author6" value="author6"/>
                                                    <author7 jcr:primaryType="nt:unstructured" text="Author7" value="author7"/>
                                                    <author8 jcr:primaryType="nt:unstructured" text="Author8" value="author8"/>
                                                </items>
                                            </authors>
                                            
                                            <granite:data jcr:primaryType="nt:unstructured" cq-dialog-radio-showhide="true" cq-dialog-radio-showhide-target=".list-option-listfrom-showhide-target"/>
                                            
                                            <!-- Author fields -->
                                            <author1 class="cq-dialog-radio-showhide-target hide" jcr:primaryType="nt:unstructured" 
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data jcr:primaryType="nt:unstructured" showhidetargetvalue="author1"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <fname jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/textfield" fieldLabel="First Name" name="./fname"/>
                                                    <lname jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/textfield" fieldLabel="Last Name" name="./lname"/>
                                                </items>
                                            </author1>
                                            
                                            <author2 class="cq-dialog-radio-showhide-target hide" jcr:primaryType="nt:unstructured" 
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data jcr:primaryType="nt:unstructured" showhidetargetvalue="author2"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <address jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/textfield" fieldLabel="Address" name="./address"/>
                                                </items>
                                            </author2>
                                            
                                            <author3 class="cq-dialog-radio-showhide-target hide" jcr:primaryType="nt:unstructured" 
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data jcr:primaryType="nt:unstructured" showhidetargetvalue="author3"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <pnum jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/textfield" fieldLabel="Phone Number" name="./pnum"/>
                                                </items>
                                            </author3>
                                            
                                            <author4 class="cq-dialog-radio-showhide-target hide" jcr:primaryType="nt:unstructured" 
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data jcr:primaryType="nt:unstructured" showhidetargetvalue="author4"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <path jcr:primaryType="nt:unstructured" sling:resourceType="granite/ui/components/coral/foundation/form/pathfield" fieldLabel="Path Field" name="./path"/>
                                                </items>
                                            </author4>
                                            
                                            <!-- Additional Author fields -->
                                            <author5 class="cq-dialog-radio-showhide-target hide" jcr:primaryType="nt:unstructured" 
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data jcr:primaryType="nt:unstructured" showhidetargetvalue="author5"/>
                                            </author5>
                                            
                                            <author6 class="cq-dialog-radio-showhide-target hide" jcr:primaryType="nt:unstructured" 
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data jcr:primaryType="nt:unstructured" showhidetargetvalue="author6"/>
                                            </author6>
                                            
                                            <author7 class="cq-dialog-radio-showhide-target hide" jcr:primaryType="nt:unstructured" 
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data jcr:primaryType="nt:unstructured" showhidetargetvalue="author7"/>
                                            </author7>
                                            
                                            <author8 class="cq-dialog-radio-showhide-target hide" jcr:primaryType="nt:unstructured" 
                                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data jcr:primaryType="nt:unstructured" showhidetargetvalue="author8"/>
                                            </author8>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </authorinfo>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>