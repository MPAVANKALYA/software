<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Component dialog"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[aemgeeks.components.dialog.editor]">
    <content
        granite:class="cmp-list_editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs">
                <items jcr:primaryType="nt:unstructured">
                    <authorinfo
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Author Info"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <columns
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <authors
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Authors"
                                                name="./listFrom">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <author5
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Author5"
                                                        value="author5"/>
                                                    <author6
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Author6"
                                                        value="author6"/>
                                                    <author7
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Author7"
                                                        value="author7"/>
                                                    <author8
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Author8"
                                                        value="author8"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".list-option-listfrom-showhide-target"/>
                                            </authors>
                                        </items>
                                    </column>
                                </items>
                            </columns>
                        </items>
                    </authorinfo>
                    <author5
                        granite:class="hide list-option-listfrom-showhide-target"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Author5"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heading
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Author1 information"
                                sling:resourceType="granite/ui/components/coral/foundation/heading"
                                fieldLabel="First Name"
                                heading="aemgeeks"/>
                            <well
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                <items jcr:primaryType="nt:unstructured">
                                    <fname
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="First Name"
                                        name="./fname"/>
                                    <lname
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Last name"
                                        name="./lname"/>
                                </items>
                            </well>
                        </items>
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            isTab="{Boolean}true"
                            showhidetargetvalue="author5"
                            tab-id="author5"/>
                    </author5>
                    <author6
                        granite:class="hide list-option-listfrom-showhide-target"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Author6"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heading
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Author1 information"
                                sling:resourceType="granite/ui/components/coral/foundation/heading"
                                fieldLabel="First Name"
                                heading="aemgeeks"/>
                            <well
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                <items jcr:primaryType="nt:unstructured">
                                    <fname
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="First Name"
                                        name="./fname"/>
                                    <lname
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Last name"
                                        name="./lname"/>
                                    <Address
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Address"
                                        name="./address"/>
                                </items>
                            </well>
                        </items>
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            isTab="{Boolean}true"
                            showhidetargetvalue="author6"
                            tab-id="author6"/>
                    </author6>
                    <author7
                        granite:class="hide list-option-listfrom-showhide-target"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Author7"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heading
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Author1 information"
                                sling:resourceType="granite/ui/components/coral/foundation/heading"
                                fieldLabel="First Name"
                                heading="aemgeeks"/>
                            <well
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                <items jcr:primaryType="nt:unstructured">
                                    <fname
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="First Name"
                                        name="./fname"/>
                                    <lname
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Last name"
                                        name="./lname"/>
                                    <phonenum
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Phone number"
                                        name="./pnum"/>
                                </items>
                            </well>
                        </items>
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            isTab="{Boolean}true"
                            showhidetargetvalue="author7"
                            tab-id="author7"/>
                    </author7>
                    <author8
                        granite:class="hide list-option-listfrom-showhide-target"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Author8"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <heading
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Author1 information"
                                sling:resourceType="granite/ui/components/coral/foundation/heading"
                                fieldLabel="First Name"
                                heading="aemgeeks"/>
                            <well
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                <items jcr:primaryType="nt:unstructured">
                                    <fname
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="First Name"
                                        name="./fname"/>
                                    <lname
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Last name"
                                        name="./lname"/>
                                    <pathfield
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldLabel="Path field"
                                        name="./path"/>
                                </items>
                            </well>
                        </items>
                        <granite:data
                            jcr:primaryType="nt:unstructured"
                            isTab="{Boolean}true"
                            showhidetargetvalue="author8"
                            tab-id="author8"/>
                    </author8>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
